<h1>Contacts</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>E-mail</th>
      <th>Message</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |contact|}}
    <tr>
      <th>{{contact.id}}</th>
      <td>{{contact.email}}</td>
      <td>{{contact.message}}</td>
      <td><button {{action 'deleteContact' contact.id}} class="btn btn-sm btn-danger">delete</button></td>
    </tr>
  {{/each}}
  </tbody>
</table>