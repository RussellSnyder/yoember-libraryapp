<h1>Contact</h1>

  <div class="form-group form-group-lg row">
    <div class="col-sm-6 col-sm-offset-3">
      {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
    </div>
  </div>
  <div class="form-group form-group-lg row">
    <div class="col-sm-6 col-sm-offset-3">
      {{textarea type="text" value=message class="form-control" placeholder="Please enter your message" rows="5"}}
    </div>
  </div>
  <div class="form-group form-group-lg row">
    <div class="col-sm-6 col-sm-offset-3">
        <button disabled={{isDisabled}} class="btn btn-primary btn-lg btn-block" {{action 'sendMessage'}}>Send Message</button>
    </div>
  </div>

  {{#if responseMessage}}
     <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}
